{
    "name": "bakame/csv-doctrine-collection-bridge",
    "type": "library",
    "description" : "Csv Doctrine Collection bridge using League\\Csv",
    "keywords": [
        "csv",
        "collections",
        "iterator",
        "array",
        "criteria",
        "doctrine"
    ],
    "require": {
        "league/csv": "^9.0",
        "doctrine/collections": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpstan/phpstan": "^0.10.1",
        "phpstan/phpstan-strict-rules": "^0.10.0",
        "phpstan/phpstan-phpunit": "^0.10.0"
    },
    "autoload": {
    	"psr-4": {
    		"Bakame\\Csv\\Doctrine\\Bridge\\" : "src"
    	}
    },
    "autoload-dev": {
        "psr-4": {
            "BakameTest\\Csv\\Doctrine\\Bridge\\": "tests"
        }
    },
    "scripts": {
        "phpcs": "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;",
        "phpstan-src": "phpstan analyse -l 7 -c phpstan.src.neon src",
        "phpstan-tests": "phpstan analyse -l 7 -c phpstan.tests.neon tests",
        "phpstan": [
            "@phpstan-src",
            "@phpstan-tests"
        ],
        "phpunit": "phpunit --coverage-text",
        "test": [
            "@phpunit",
            "@phpcs",
            "@phpstan-src",
            "@phpstan-tests"
        ]
    }
}
